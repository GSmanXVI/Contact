<Window x:Class="WpfApp10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp10"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <local:Student x:Key="Studinfo" Name="Tural" Surname="Muradov" Age="24"> </local:Student>
    </Window.Resources>
    <Grid>
       
        <DockPanel>
            <Grid DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
              
                <StackPanel Grid.Column="0"  Orientation="Horizontal">
                <Menu Background="Silver">
                    <MenuItem Header="Open XML"/>
                    <MenuItem Header="Add" Click="MenuItem_Click"/>
                    <MenuItem Header="Delete"/>
                    <MenuItem Header="Update" />
                </Menu>
                </StackPanel>
                <StackPanel Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal" >
                    <Button Content="Add" Margin="3" />
                    <Button Content="Delete" Margin="3"/>
                    <Button Content="Update" Margin="3"/>
                </StackPanel>
            </Grid>
            <StackPanel DockPanel.Dock="Left" Background="Gray">
                <Label Name="infoLabel" Content="Student Info"/>
            </StackPanel>
            <Grid DockPanel.Dock="Bottom" Margin="5,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
               
                <ProgressBar Grid.Column="0" HorizontalAlignment="Left" MaxWidth="100" >
                    
                </ProgressBar>
           
                <Label Name="countLabel" Grid.Column="1" Content="Count :" HorizontalAlignment="Center"></Label>
            </Grid>
            <ListBox Name="StudentlistBox">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate >
                        <WrapPanel>
                            
                        </WrapPanel>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Button >
                        <StackPanel>
                                <Image Height="50" Width="50" Source="{Binding Path=ImgPath}" />
                                <TextBlock Text="{Binding Path=Name}"/>
                                <TextBlock Text="{Binding Path=Surname}"/>
                                <TextBlock  Text="{Binding Path=Age}"/>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
    </Grid>
</Window>
