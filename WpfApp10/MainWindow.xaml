<Window x:Class="WpfApp10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp10"
        Loaded="Window_Loaded"
        Closed="Window_Closed"  
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">


    <Grid>

        <DockPanel>
            <Grid DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"  Orientation="Horizontal">
                    <Menu Background="Silver">
                        <MenuItem Header="Open XML" Click="MenuItem_Click_2"/>
                        <MenuItem Header="Add" Click="MenuItem_Click"/>
                        <MenuItem Header="Delete" Click="MenuItem_Click_1"/>
                        <MenuItem Header="Update" />
                    </Menu>
                </StackPanel>
                <StackPanel Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal" >
                    <Button Content="Add" Margin="3" Click="MenuItem_Click" />
                    <Button Content="Delete" Margin="3"/>
                    <Button Content="Update" Margin="3"/>
                </StackPanel>
            </Grid>
            <ListBox Name="StudInfobox" Visibility="Hidden">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel DockPanel.Dock="Left" Background="Gray" >
                            <TextBlock TextWrapping="Wrap" Text= "{Binding StringFormat=Name : {0}, Path=Name }"/>
                            <TextBlock TextWrapping="Wrap" Text="{Binding StringFormat=Surname : {0}, Path=Surname}"/>
                            <TextBlock TextWrapping="Wrap" Text="{Binding StringFormat=Age : {0}, Path=Age}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Grid DockPanel.Dock="Bottom" Margin="5,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <ProgressBar Name="progresBar" Minimum="1" Maximum="100" Grid.Column="0" HorizontalAlignment="Left"  Width="97" >

                </ProgressBar>

                <Label  Grid.Column="1" Content="Count :" HorizontalAlignment="Center"/>
                <Label Name="countLabel" Grid.Column="1" HorizontalAlignment="Right"/>
            </Grid>
            <ListBox Name="StudentlistBox">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate >
                        <WrapPanel>

                        </WrapPanel>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Button Click="Button_Click">
                            <StackPanel>
                                <Image Height="50" Width="50" Source="{Binding Path=ImgPath}" />
                                <TextBlock Text="{Binding Path=Name}"/>
                                <TextBlock Text="{Binding Path=Surname}"/>
                                <TextBlock  Text="{Binding Path=Age}"/>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
    </Grid>
</Window>
